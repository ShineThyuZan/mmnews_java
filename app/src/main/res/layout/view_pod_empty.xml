<?xml version="1.0" encoding="utf-8"?>
<com.example.stz.myapplication.viewpods.EmptyViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/iv_empty"
        android:layout_width="160dp"
        android:layout_height="160dp"
        tools:src="@drawable/empty"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/empty_msg"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_empty"
        android:layout_marginTop="@dimen/margin_medium_2"/>

</com.example.stz.myapplication.viewpods.EmptyViewPod>